<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".SMSPage">

    <EditText
        android:id="@+id/etUser"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:hint="User/Club"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvmessagedisplay"
        android:layout_width="match_parent"
        android:layout_height="333dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:hint="Messages Show Here!!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_below="@+id/etUser"
        android:layout_alignLeft="@+id/etUser"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Type message"
        android:inputType="textLongMessage" />


    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="doSend"
        android:text="Send" />

    <Button
        android:id="@+id/btnDiscovery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="doDiscovery"
        android:text="Discovery Page" />




</LinearLayout>

