<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".showClickedItem">

    <TextView
        android:id="@+id/venueName"
        android:layout_width="348dp"
        android:layout_height="113dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/black_ops_one"
        android:text="Sligo Martial Arts"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addThree"
        android:layout_width="293dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="344dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addTwo"
        android:layout_width="293dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="284dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/martialartsType"
        android:layout_width="138dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="168dp"
        android:text="Sligo Martial Arts"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/addOne"
        android:layout_width="196dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="216dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="395dp"
        tools:layout_editor_absoluteY="148dp" />

    <Button
        android:id="@+id/BtnshowonMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="145dp"
        android:layout_marginTop="574dp"
        android:layout_marginEnd="71dp"
        android:onClick="showonMap"
        android:text="SHOW ON MAP"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>